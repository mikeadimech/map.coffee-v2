{
  "compilerOptions": {
    "moduleResolution": "bundler", // Required for `allowImportingTsExtensions`
    "allowImportingTsExtensions": true, // Allow explicit .ts/.tsx imports
    "noEmit": true, // Prevent JavaScript files from being emitted
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
